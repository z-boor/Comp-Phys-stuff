#python code
#need to define your own function and the 2nd derivative of the function then find its magnititude to properly use the code. 


def trapezoidal (a, b, N):

    fun = 0
    h = (b-a)/N # height of function
    for i in range(1,N):
        fun = fun + f(a + (i * h))
        #takes the value from 1 to N-1 and adds them all together
    
    return h * abs(0.5 * f(a) + 0.5 * f(b) + fun) #returns the trapezodial value

print(trapezoidal (0, 2, 4))
print(trapezoidal (0, 2, 10))
print(trapezoidal (0, 2, 100))

def trapezoidal_err (a, b, N):

    fun = 0
    h = (b-a)/N # height of function
    for i in range(1,N):
        fun = fun + f(a + (i * h))
        #takes the value from 1 to N-1 and adds them all together
    err = -1*(b-a)**3/(12*N**2) * ddf(b-a)
    estimate = h * abs(0.5 * f(a) + 0.5 * f(b) + fun)
    return estimate, err #returns the trapezodial value
